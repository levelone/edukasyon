<p id="notice"><%= notice %></p>

<h1>Manage Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.email %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= link_to 'Show', admin_teacher_path(teacher) %></td>
        <td><%= link_to 'Edit', edit_admin_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', admin_teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_admin_teacher_path %>
