<p id="notice"><%= notice %></p>

<h1>Klasses</h1>

<%= render '/shared/search_form',
  path: admin_klasses_path,
  type: 'Klass' %>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Teacher</th>
      <th>Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @klasses.offered_klasses.each do |klass| %>
      <tr>
        <td><%= klass.course.name if klass.course %></td>
        <td><%= klass.teacher.full_name %></td>
        <td><%= klass.enrolled_students.count %></td>
        <td><%= link_to 'Show', admin_klass_path(klass) %></td>
        <td><%= link_to 'Edit', edit_admin_klass_path(klass) %></td>
        <td><%= link_to 'Destroy', admin_klass_path(klass), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Klass', new_admin_klass_path %>
<%= link_to 'Back', admin_root_path %>
