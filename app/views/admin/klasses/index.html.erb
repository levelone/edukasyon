<p id="notice"><%= notice %></p>

<h1>Klasses</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @klasses.offered_klasses.each do |klass| %>
      <tr>
        <td><%= klass.subject %></td>
        <td><%= klass.teacher.full_name %></td>
        <td><%= link_to 'Show', admin_klass_path(klass) %></td>
        <td><%= link_to 'Edit', edit_admin_klass_path(klass) %></td>
        <td><%= link_to 'Destroy', admin_klass_path(klass), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Klass', new_admin_klass_path %>
