<p id="notice"><%= notice %></p>

<h1><%= @course.name %></h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Students</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.klasses.offered_klasses.each do |klass| %>
      <tr>
        <td><%= klass.teacher.full_name %></td>
        <td><%= klass.enrolled_students.count %></td>
        <td>0</td>
        <td><%= link_to 'Enroll', '#' %></li>
        <td><%= link_to 'Review', '#' %></li>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', courses_path %>
