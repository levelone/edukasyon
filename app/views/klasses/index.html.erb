<h1>Klasses</h1>

<%= render 'search_form', path: klasses_path %>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Teacher</th>
      <th>Students</th>
      <th>Reviews</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @klasses.offered_klasses.each do |klass| %>
      <tr>
        <td><%= link_to klass.course.name, klass_path(klass.id) %></td>
        <td><%= klass.teacher.full_name %></td>
        <td><%= klass.enrolled_students.count %></td>
        <td>0</td>
        <td>0</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path %>
